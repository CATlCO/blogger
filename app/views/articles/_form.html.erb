<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</p>
	<p>
	  	<% if @article.image.exists? %>
	      	<%= @article.image_file_name %><br/>
	      	<%= image_tag @article.image.url(:thumb) %>
	      	<%= f.label :image, "Change an image" %>
	    <% else %>
	    	<%= f.label :image, "Attach an image" %>
	  	<% end %>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>	
<% end %>